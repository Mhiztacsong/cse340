<h1><%= title %></h1>
<p><%= message %></p>
<p>Confirm Deletion - This action cannot be undone.</p>


<% if (errors && errors.length > 0) { %>
    <ul class="errors">
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
<% } %>

<form action="/inv/delete" class="formie" id="updateForm" method="post">

    <label for="inv_make">Make</label>
    <input type="text" id="inv_make" name="inv_make" required value="<%= inv_make %>" readonly>

    <label for="inv_model">Model</label>
    <input type="text" id="inv_model" name="inv_model" required value="<%= inv_model %>" readonly>

    <label for="inv_year">Year</label>
    <input type="number" id="inv_year" name="inv_year" required value="<%= inv_year %>" readonly>

    <label for="inv_price">Price</label>
    <input type="number" id="inv_price" name="inv_price" required value="<%= inv_price %>" readonly>
    
    <button type="submit">Delete</button>

    <input type="hidden" name="inv_id"
    <% if (locals.inv_id) { %> value="<%= locals.inv_id %>" <% } %>>
</form>
