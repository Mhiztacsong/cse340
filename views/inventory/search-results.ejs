<h1>Search Results</h1>

<% if (results.length > 0) { %>
  <ul>
    <% results.forEach(vehicle => { %>
      <li>
        <a href="/inv/detail/<%= vehicle.inv_id %>">
          <%= vehicle.inv_make %> <%= vehicle.inv_model %> - <%= vehicle.inv_color %> - $<%= vehicle.inv_price %>
        </a>
      </li>
    <% }) %>
  </ul>
<% } else { %>
  <p>No vehicles matched your search.</p>
<% } %>
